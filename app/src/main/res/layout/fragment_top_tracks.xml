<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="si.vei.pedram.spotifystreamer.fragments.TopTracksFragment">

    <ImageView
        android:id="@+id/top_tracks_header_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tracks_header_height"
        android:layout_marginBottom="@dimen/top_tracks_header_list_margin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ListView
        android:id="@+id/artist_top_tracks_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_tracks_header_imageview"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/artist_list_divider_height"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scrollbarStyle="outsideOverlay" />

    <include
        android:id="@+id/empty_top_tracks_list_message_view"
        layout="@layout/list_empty_view"></include>

</RelativeLayout>
