<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.vei.pedram.spotifystreamer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="si.vei.pedram.spotifystreamer.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="si.vei.pedram.spotifystreamer.activities.TopTracksActivity"
            android:label="@string/title_activity_top_tracks"
            android:parentActivityName="si.vei.pedram.spotifystreamer.activities.MainActivity"></activity>
        <activity
            android:name="si.vei.pedram.spotifystreamer.activities.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="si.vei.pedram.spotifystreamer.activities.MainActivity"></activity>
    </application>

</manifest>
